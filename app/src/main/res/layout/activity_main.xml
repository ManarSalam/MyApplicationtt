<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#044E8E"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/back_ground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/nurseTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Nursery Information"
            android:textColor="#514B66"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_icon_1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:padding="5dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nurseTxt">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Phone Number"
                    android:textColor="#514B66"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_background"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/phone_number"
                    app:layout_constraintStart_toStartOf="@id/phone_number"
                    android:layout_marginStart="44dp" />

                <ImageView
                    android:id="@+id/trash"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_trash"
                    app:layout_constraintBottom_toBottomOf="@id/editText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/editText"

                    app:layout_constraintTop_toTopOf="@+id/editText" />


                <EditText
                    android:id="@+id/add_phone"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_background"
                    app:layout_constraintEnd_toEndOf="@id/editText"
                    app:layout_constraintStart_toStartOf="@id/editText"
                    app:layout_constraintTop_toBottomOf="@id/editText"


                    />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Email"
                    android:textColor="#514B66"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_phone" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:background="@drawable/text_background"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/email"

                    tools:layout_editor_absoluteX="44dp" />

                <LinearLayout
                    android:id="@+id/add_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="@id/editText2"
                    app:layout_constraintStart_toStartOf="@id/editText2"
                    app:layout_constraintTop_toBottomOf="@id/editText2">

                </LinearLayout>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address"
                    android:textColor="#514B66"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_email" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:background="@drawable/text_background"
                    android:padding="5dp"
                    app:layout_constraintStart_toEndOf="@id/email"
                    app:layout_constraintTop_toBottomOf="@id/address" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_facebook"
                    app:layout_constraintBottom_toBottomOf="@+id/editText4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editText4" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_background"
                    android:hint="        Facebook (URL)"
                    android:padding="5dp"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@id/facebook"
                    app:layout_constraintTop_toBottomOf="@id/editText3"

                    />

                <ImageView
                    android:id="@+id/whatsup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_group_1417"
                    app:layout_constraintBottom_toBottomOf="@+id/editText5"
                    app:layout_constraintStart_toStartOf="@id/facebook"
                    app:layout_constraintTop_toTopOf="@+id/editText5" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_background"
                    android:hint="        What's App (Number)"
                    android:padding="5dp"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@id/whatsup"
                    app:layout_constraintTop_toBottomOf="@id/editText4"

                    />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_twitter"
                    app:layout_constraintBottom_toBottomOf="@+id/editText6"
                    app:layout_constraintStart_toStartOf="@id/whatsup"
                    app:layout_constraintTop_toTopOf="@+id/editText6" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_background"
                    android:hint="        Twitter (URL)"
                    android:padding="5dp"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp"
                    app:layout_constraintStart_toEndOf="@id/twitter"
                    app:layout_constraintTop_toBottomOf="@id/editText5" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_instagram"
                    app:layout_constraintBottom_toBottomOf="@+id/editText7"
                    app:layout_constraintStart_toStartOf="@id/twitter"
                    app:layout_constraintTop_toTopOf="@+id/editText7" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="290dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_background"
                    android:hint="        Instagram (URL)"
                    android:padding="5dp"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/instagram"
                    app:layout_constraintTop_toBottomOf="@id/editText6" />


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>